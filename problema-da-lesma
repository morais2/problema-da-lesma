programa
{
  inteiro altura


  funcao inicio()
  {
    escreva("Informe o tamanho da parede:\n")
    leia(altura)
    limpa()

    se(altura <= 3)
    {
      escreva("A pobre lesminha levará 1 dia para subir a parede!")
    }
    senao
    {
      escreva("A pobre lesminha levará", altura -2,"dias.")
    }
  }
}
